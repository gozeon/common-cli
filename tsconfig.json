{
  "compilerOptions": {
    // Targeted standard
    "target": "es5",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    // Module system
    "module": "commonjs",
    "moduleResolution": "node",
    // Strictness
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    // Output
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": false,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts",
  ]
}
